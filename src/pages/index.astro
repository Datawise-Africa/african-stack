---
import Layout from "../layouts/Layout.astro";
import { Newspaper, Send, Database, Server, Brain, ArrowRight } from '@lucide/astro';

const title = "The African Stack - Building Africa's Future";
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600">
    <!-- Animated Background Shapes -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-10 w-20 h-20 bg-white/10 rounded-full animate-bounce" style="animation-delay: 0s;"></div>
      <div class="absolute top-60 right-20 w-32 h-32 bg-white/10 rounded-full animate-bounce" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-40 left-20 w-16 h-16 bg-white/10 rounded-full animate-bounce" style="animation-delay: 4s;"></div>
      <div class="absolute top-40 right-40 w-24 h-24 bg-white/10 rounded-full animate-bounce" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-60 right-10 w-12 h-12 bg-white/10 rounded-full animate-bounce" style="animation-delay: 3s;"></div>
    </div>
    
    <div class="relative z-10 w-full text-center text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-6 bg-gradient-to-r from-white to-gray-100 bg-clip-text text-transparent drop-shadow-lg">
          The African Stack
        </h1>
        <p class="text-xl md:text-2xl lg:text-3xl font-light mb-12 max-w-4xl mx-auto opacity-90 leading-relaxed">
          Building Africa's future in data, infrastructure, and intelligence.
        </p>
        
        <div class="mb-16">
          <a href="/archive" class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-pink-500 to-rose-500 text-white text-lg font-semibold rounded-full shadow-2xl hover:shadow-pink-500/25 transition-all duration-300 hover:-translate-y-1">
            <Newspaper class="w-6 h-6" />
            Read the latest issue
          </a>
        </div>
        
        <!-- Email Signup Section -->
        <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-3xl p-8 md:p-12 max-w-2xl mx-auto">
          <h3 class="text-2xl font-bold mb-4">Stay updated with Africa's tech future</h3>
          <p class="text-lg mb-8 opacity-90">Get insights on data, infrastructure, and intelligence delivered to your inbox</p>
          
          <form class="mb-4" id="hero-signup">
            <div class="flex flex-col sm:flex-row gap-4 mb-4">
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="Enter your email address" 
                required
                class="flex-1 px-6 py-4 bg-white/90 text-gray-900 rounded-full text-lg placeholder-gray-600 focus:outline-none focus:ring-4 focus:ring-white/50 transition-all duration-300"
              >
              <button type="submit" class="px-8 py-4 bg-gradient-to-r from-blue-500 to-cyan-500 text-white font-semibold rounded-full hover:shadow-2xl hover:shadow-blue-500/25 transition-all duration-300 hover:-translate-y-1 flex items-center gap-2">
                <Send class="w-5 h-5" />
                Subscribe
              </button>
            </div>
            <p class="text-sm opacity-80">Join 1,000+ tech leaders building Africa's future</p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-8 bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
          <div class="w-20 h-20 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <Database class="w-10 h-10 text-white" />
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Data Insights</h3>
          <p class="text-gray-600 leading-relaxed">Deep analysis of Africa's data landscape, opportunities, and challenges</p>
        </div>
        
        <div class="text-center p-8 bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
          <div class="w-20 h-20 bg-gradient-to-br from-purple-500 to-pink-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <Server class="w-10 h-10 text-white" />
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Infrastructure</h3>
          <p class="text-gray-600 leading-relaxed">Coverage of critical infrastructure projects and technological advancements</p>
        </div>
        
        <div class="text-center p-8 bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
          <div class="w-20 h-20 bg-gradient-to-br from-pink-500 to-rose-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <Brain class="w-10 h-10 text-white" />
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Intelligence</h3>
          <p class="text-gray-600 leading-relaxed">AI, machine learning, and smart solutions transforming the continent</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Issue Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-sm uppercase tracking-widest text-indigo-600 font-semibold mb-4">Latest Issue</h2>
          <h3 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">The Future of African Fintech</h3>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            Exploring how mobile money, blockchain, and AI are reshaping financial services across Africa. From M-Pesa's evolution to emerging DeFi platforms, discover the innovations driving financial inclusion.
          </p>
          <a href="/archive" class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-lg font-semibold rounded-full hover:shadow-2xl hover:shadow-indigo-500/25 transition-all duration-300 hover:translate-x-2">
            Read Full Issue
            <ArrowRight class="w-5 h-5" />
          </a>
        </div>
        
        <div class="flex justify-center">
          <div class="relative w-80 h-96 bg-gradient-to-br from-purple-500 to-pink-600 rounded-3xl shadow-2xl overflow-hidden">
            <!-- Abstract Pattern -->
            <div class="absolute inset-0 opacity-20">
              <div class="absolute top-8 left-8 w-16 h-16 bg-white rounded-full"></div>
              <div class="absolute top-32 right-12 w-12 h-12 bg-white rounded-full"></div>
              <div class="absolute bottom-20 left-16 w-20 h-20 bg-white rounded-full"></div>
              <div class="absolute bottom-32 right-8 w-8 h-8 bg-white rounded-full"></div>
            </div>
            
            <!-- Issue Info -->
            <div class="absolute bottom-8 left-8 text-white">
              <div class="text-6xl font-bold mb-2">#12</div>
              <div class="text-lg opacity-90">December 2024</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Handle form submissions
  document.addEventListener('DOMContentLoaded', function() {
    const heroForm = document.getElementById('hero-signup');
    const footerForm = document.getElementById('footer-signup');

    function handleSubmit(e) {
      e.preventDefault();
      const target = e.target;
      const email = target.querySelector('input[type="email"]');
      const emailValue = email.value;
      
      // Here you would integrate with Mailchimp, ConvertKit, or your preferred service
      alert(`Thank you for subscribing with: ${emailValue}`);
      target.reset();
    }

    if (heroForm) heroForm.addEventListener('submit', handleSubmit);
    if (footerForm) footerForm.addEventListener('submit', handleSubmit);
  });
</script>
