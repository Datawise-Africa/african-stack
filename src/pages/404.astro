---
import Layout from "../layouts/Layout.astro";
import { Home, Archive, ArrowLeft } from '@lucide/astro';

const title = "Page Not Found - The African Stack";
---

<Layout title={title}>
  <section class="min-h-screen bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 flex items-center justify-center text-white">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="mb-8">
        <h1 class="text-8xl md:text-9xl font-bold opacity-20">404</h1>
      </div>
      
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Page Not Found</h2>
      <p class="text-xl opacity-90 mb-12 leading-relaxed">
        The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-white text-indigo-600 font-medium rounded-full hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <Home class="w-4 h-4" />
          Go Home
        </a>
        <a href="/archive" class="inline-flex items-center gap-2 px-6 py-3 bg-white/20 backdrop-blur-sm text-white font-medium rounded-full hover:bg-white/30 transition-all duration-300 hover:-translate-y-1">
          <Archive class="w-4 h-4" />
          Browse Archive
        </a>
      </div>
    </div>
  </section>
</Layout>
