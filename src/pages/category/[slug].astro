---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  
  // Get all unique categories
  const uniqueCategories = [...new Set(allPosts.map(post => post.data.category))];
  
  // Create a path for each category
  return uniqueCategories.map((category: string) => {
    // Filter posts for this category
    const posts = allPosts.filter(post => post.data.category === category);
    
    // Sort by publish date (most recent first)
    const sortedPosts = posts.sort((a, b) => {
      return new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime();
    });
    
    return {
      params: { slug: category.toLowerCase().replace(/\s+/g, '-') },
      props: { category, posts: sortedPosts }
    };
  });
}

const { category, posts } = Astro.props;
---

<MainLayout title={`${category} Articles`}>
  <div class="max-w-7xl mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <header class="mb-12">
      <a href="/blog" class="text-blue-600 hover:text-blue-500 flex items-center gap-1 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M15 18l-6-6 6-6" />
        </svg>
        Back to all articles
      </a>
      <h1 class="font-serif font-bold text-4xl md:text-5xl mb-2">{category}</h1>
      <p class="text-xl text-muted-foreground">
        Browse all {posts.length} article{posts.length === 1 ? '' : 's'} in this category
      </p>
    </header>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <div class="group hover:shadow-lg transition-all duration-300 border border-border hover:border-blue-200 dark:hover:border-blue-800 hover:-translate-y-0.5 rounded-lg overflow-hidden">
          <div class="aspect-video overflow-hidden">
            <img
              src={post.data.image || "/placeholder.svg"}
              alt={post.data.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <div class="flex items-center gap-2 mb-3">
              <span class="bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300 px-2 py-1 rounded-full text-xs font-medium">
                {post.data.category}
              </span>
            </div>
            <h3 class="font-serif font-semibold text-xl leading-tight group-hover:text-blue-600 transition-colors mb-3">
              <a href={`/blog/${post.slug}`}>{post.data.title}</a>
            </h3>
            <p class="text-muted-foreground mb-4 line-clamp-2 leading-relaxed">{post.data.excerpt}</p>
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2">
                <div class="w-8 h-8 rounded-full overflow-hidden">
                  <img
                    src={post.data.author.avatar}
                    alt={post.data.author.name}
                    class="w-full h-full object-cover"
                  />
                </div>
                <span class="text-sm font-medium">{post.data.author.name}</span>
              </div>
              <div class="text-sm text-muted-foreground">{post.data.publishDate}</div>
            </div>
          </div>
        </div>
      ))}
        </div>
  </div>
</MainLayout>

